<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#23264A"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/checkboxSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#6A81FF"
            android:layout_marginEnd="16dp" />

        <!-- Subject Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSubjectTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 10:29 PM - 11:23 PM"
                android:textColor="#B5B8DE"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/textSubjectDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 54 min"
                android:textColor="#B5B8DE"
                android:textSize="13sp"
                android:layout_marginTop="1dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
